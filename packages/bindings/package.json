{
  "name": "@palettegear/serialport-bindings",
  "version": "2.0.8",
  "main": "lib",
  "keywords": [
    "serialport-binding"
  ],
  "dependencies": {
    "@palettegear/serialport-binding-abstract": "^2.0.5",
    "@palettegear/serialport-parser-readline": "^2.0.3",
    "bindings": "^1.3.0",
    "debug": "^4.1.0",
    "nan": "^2.12.1",
    "prebuild-install": "^5.2.1"
  },
  "devDependencies": {
    "@palettegear/serialport-binding-mock": "^2.0.5"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "install": "prebuild-install --tag-prefix @palettegear/serialport-bindings@ || node-gyp rebuild",
    "lint": "cc --verbose",
    "prebuild": "prebuild --all --force --strip --verbose --tag-prefix @palettegear/serialport-bindings@",
    "rebuild": "node-gyp rebuild"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/node-serialport/node-serialport.git"
  },
  "gypfile": true,
  "cc": {
    "filter": [
      "legal/copyright",
      "build/include"
    ],
    "files": [
      "src/*.cpp",
      "src/*.h"
    ],
    "linelength": "120"
  }
}
